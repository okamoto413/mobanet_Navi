  <body>
 <!-- グローバルナビゲーション -->
   
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <a class="navbar-brand" href="#">MobanetNavi</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item"><%= link_to '管理者画面', rails_admin_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ユーザ一覧', admin_users_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ユーザを登録する', new_admin_user_path, class: 'nav-link' %></li>
          <% end %>
          <li class="nav-item"><%= link_to 'スマホ代診断', new_user_input_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'プラン一覧', plans_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'アカウント', edit_user_registration_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'アカウント登録', new_user_registration_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

      <!-- フラッシュメッセージ -->
    <div class="flash-message">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type == 'notice' ? 'info' : 'danger' %>">
        <%= message %>
      </div>
    <% end %>
  </div>

   <div class="container">
    <%= yield %>
  </div>
